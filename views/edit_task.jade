extends layout

block content
    div(class="row")
        div(class="col s7 offset-s2")
            div(class="panel center")
                a(href="/tasks") List of tasks
    div(class="row")
        div(class="col s7 offset-s2")
            div(class="form center")
                h2 Edit Task
                form(method="post", action="/tasks/" + task.id)
                    input(type="hidden", name="_method", value="PUT")
                    div(class="input-field col s12")
                        input(type="text", class="validate", name="name", placeholder="Nome da task:", value=task.name)
                    div(class="input-field col s12")
                        select(name="done", class="browser-default")
                            if task.done
                                option(selected, value="true") Yes
                                option(value="false") No
                            else
                                option(selected, value="false") No
                                option(value="true") Yes
                    div(class="input-field col s12")
                        button(type="submit", class="btn-flat teal") Salvar
